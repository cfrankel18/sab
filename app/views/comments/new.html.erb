<h1>Create a new comment.</h1>
<%#= form_for @comment, url: weekend_event_comments_path do |f| %>
	<%#= render 'shared/error_messages', :object=>f.object %>
	
	<%#= f.hidden_field :user_id, :value => @comment.user_id %>
	
	<div>
		<%#= f.label :content %>
		<%#= f.text_field :content %>
	</div>
	
	<div>
		<%#= f.submit 'Save' %>
	</div>
	
	<%= render 'form' %>
<%# end %> 