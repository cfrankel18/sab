<%= form_for @user do |f| %>
	<%= render 'shared/error_messages', :object=>f.object %>
	
	<%= f.check_box :is_member, :value => @user.is_member %>
	
	<div>
		<%= f.label :first %>
		<%= f.text_field :first %>
	</div>
	<div>
		<%= f.label :last %>
		<%= f.text_field :last %>
	</div>
	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	
	<div>
		<%= f.submit 'save user' %>
	</div>
<% end %>
