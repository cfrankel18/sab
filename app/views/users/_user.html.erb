<div>
	<%= user.first %> <%= user.last %> (<%= user.email %>): 
	<%= link_to 'Edit', edit_user_path(id:user.id), :class => "btn" %> 
	| <%= link_to 'Show', user_path(id:user.id), :class => "btn" %> 
	| <%= link_to 'Delete', user, :method=>:delete, :data=>{:confirm=>'Are you sure?'}, :class => "btn" %>
	<% if user.is_member %>
	<% message = "Remove Board Member Status" %>
	<% else %>
	<% message = "Make Board Member" %>
	<% end %>
	| <%= link_to message, user_make_member_path(user_id:user.id), :class => "btn btn-info", :method => 'patch' %>
</div>