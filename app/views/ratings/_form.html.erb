<%= form_for @rating, url: weekend_event_ratings_path do |f| %>
	<%= render 'shared/error_messages', :object=>f.object %>
	
	<%= f.hidden_field :user_id, :value => @rating.user_id %>
	
	<div>
		<%= f.label :value, '1', value: 1 %>
		<%= f.radio_button :value, '1' %>
	</div>
	
	<div>
		<%= f.label :value, '2', value: 2 %>
		<%= f.radio_button :value, '2' %>
	</div>
	
	<div>
		<%= f.label :value, '3', value: 3 %>
		<%= f.radio_button :value, '3' %>
	</div>
	
	<div>
		<%= f.label :value, '4', value: 4 %>
		<%= f.radio_button :value, '4' %>
	</div>
	
	<div>
		<%= f.label :value, '5', value: 5 %>
		<%= f.radio_button :value, '5' %>
	</div>
	
	<div>
		<%= f.submit 'Save rating' %>
	</div>
	
<% end %> 