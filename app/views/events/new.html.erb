<% provide :title, 'Create a New Event' %>
<h1>Create a new Event</h1>
<%= form_for @event, url: weekend_events_path do |f| %>
	<%= render 'shared/error_messages', :object=>f.object %>
	
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div>
			<%= f.label :description %>
			<%= f.text_field :description %>
	</div>
		
	<div>
			<%= f.label :day %>
			<%= f.text_field :day %>
	</div>
		
	<div>
			<%= f.label :time %>
			<%= f.text_field :time %>
	</div>
	
	<div>
		<%= f.submit 'save event' %>
	</div>
	
<% end %> 